{
  "rules": {
    "ban": [
      true,
      { "name": ["describe", "only"], "message": "Do not focus tests." },
      { "name": ["it", "only"], "message": "Do not focus tests." },
      { "name": ["it", "skip"], "message": "Do not skip single tests." },
      { "name": ["test", "only"], "message": "Do not focus tests." },
      { "name": ["test", "skip"], "message": "Do not skip single tests." }
    ],
    "member-ordering": {
      "options": [{ "alphabetize": true, "order": "fields-first" }]
    },
    "no-bitwise": true,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-import-side-effect": [
      true,
      { "ignore-module": "^(rxjs|core-js|zone)" }
    ],
    "static-this": true,
    "variable-name": [
      true,
      "ban-keywords",
      "allow-leading-underscore",
      "allow-pascal-case",
      "check-format",
      "require-const-for-all-caps"
    ]
  }
}
